<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    tools:context=".AddItem">

    <Button
        android:id="@+id/save_button3"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:background="#CC99CC"
        android:text="บันทึก"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/back_button"
        app:layout_constraintStart_toEndOf="@+id/back_button"
        app:layout_constraintTop_toTopOf="@+id/back_button"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/tel_edit_text1"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="เบอร์โทร"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/department_edit_text1"
        app:layout_constraintStart_toStartOf="@+id/department_edit_text1"
        app:layout_constraintTop_toBottomOf="@+id/department_edit_text1" />

    <EditText
        android:id="@+id/department_edit_text1"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="แผนก"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/position_edit_text1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/position_edit_text1"
        app:layout_constraintTop_toBottomOf="@+id/position_edit_text1" />

    <EditText
        android:id="@+id/position_edit_text1"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="ตำแหน่ง"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/age_edit_text1"
        app:layout_constraintStart_toStartOf="@+id/age_edit_text1"
        app:layout_constraintTop_toBottomOf="@+id/age_edit_text1" />

    <EditText
        android:id="@+id/age_edit_text1"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="อายุ"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/name_edit_text1"
        app:layout_constraintStart_toStartOf="@+id/name_edit_text1"
        app:layout_constraintTop_toBottomOf="@+id/name_edit_text1" />

    <EditText
        android:id="@+id/name_edit_text1"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="ชื่อ-นามสกุล"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.632"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="#CC99CC"
        android:text="ย้อนกลับ"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/tel_edit_text1"
        app:layout_constraintHorizontal_bias="0.192"
        app:layout_constraintStart_toStartOf="@+id/tel_edit_text1"
        app:layout_constraintTop_toBottomOf="@+id/tel_edit_text1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="เพิ่มข้อมูลพนักงาน"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.101" />

</android.support.constraint.ConstraintLayout>

